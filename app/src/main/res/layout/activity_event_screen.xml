<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        tools:context=".EventScreen">

        <TableRow
            android:id="@+id/searchRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_gravity="center"
            android:onClick="toSearchScreen">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/search_button_margin"
                android:layout_marginBottom="@dimen/search_button_margin"
                android:src="@drawable/magnifier"
                android:maxWidth="@dimen/search_button_size"
                android:maxHeight="@dimen/search_button_size"
                android:layout_span="3"
                android:background="@color/black"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dayonepink">
            <RelativeLayout>
                <TextView
                android:id="@+id/dayOne"
                android:layout_width="@dimen/activity_layout_width"
                android:layout_height="@dimen/activity_layout_height"
                android:layout_marginLeft="@dimen/activity_double_horizontal_margin"
                android:layout_marginRight="@dimen/activity_double_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/day_of_week_one"
                android:textSize="@dimen/activity_day_text"
                android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/dateOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/dayOne"
                    android:layout_marginStart="@dimen/activity_margin_start"
                    android:layout_marginLeft="@dimen/activity_double_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_double_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/date_one"
                    android:textSize="@dimen/activity_date_text"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="@dimen/full_screen"
                    android:layout_height="wrap_content"
                    android:id="@+id/rowSpaceHolder"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


        </TableRow>

