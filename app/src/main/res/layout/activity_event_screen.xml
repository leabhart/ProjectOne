                    android:layout_alignTop="@+id/dayTwo"
                    android:layout_toRightOf="@+id/dayTwo"
                    android:layout_toEndOf="@+id/dayTwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_event_spacing"
                    android:textSize="@dimen/activity_event_text"
                    android:text="@string/day_two_event_two"
                    android:id="@+id/textView3_2"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/textView2_1"
                    android:layout_alignLeft="@+id/textView2_1" />

            </RelativeLayout>

